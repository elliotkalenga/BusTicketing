@model List<BusTicketing.ViewModels.RouteStopVm>

@{
    Layout = "_Layout";
    var showModal = TempData["ShowRouteStopModal"]?.ToString() ?? "false";
    var errHtml = TempData["ErrorDetailsHtml"]?.ToString() ?? "";
    var busRoutes = ViewBag.BusRoutes as IEnumerable<(int Id, string Name)> ?? Enumerable.Empty<(int Id, string Name)>();
    var terminals = ViewBag.Terminals as IEnumerable<(int Id, string Name)> ?? Enumerable.Empty<(int Id, string Name)>();
}

<div class="container-fluid mt-2">

    @* Alerts *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle me-1"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <div class="fw-bold">
                <i class="bi bi-exclamation-triangle me-1"></i> @TempData["ErrorMessage"]
            </div>
            @Html.Raw(errHtml)
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="m-0"><i class="bi bi-geo-alt me-1"></i> Route Stops</h4>
        <button class="btn btn-dark-blue" data-bs-toggle="modal" data-bs-target="#routeStopModal" onclick="clearForm()">
            <i class="bi bi-plus-circle me-1"></i> Add New Stop
        </button>
    </div>

    <div class="table-responsive">
        <table id="stopsTable" class="table table-striped table-bordered display nowrap w-100">
            <thead>
                <tr>
                    <th>Route</th>
                    <th>Sequence</th>
                    <th>Terminal</th>
                    <th>Dwell (Min)</th>
                    <th style="width:140px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model ?? new List<BusTicketing.ViewModels.RouteStopVm>())
                {
                    <tr>
                        <td>@s.RouteName</td>
                        <td>@s.Sequence</td>
                        <td>@s.TerminalName</td>
                        <td>@s.DwellMinutes</td>
                        <td class="text-nowrap">
                            <button class="btn btn-sm btn-warning edit-stop-btn"
                                    data-bs-toggle="modal"
                                    data-bs-target="#routeStopModal"
                                    data-id="@s.Id"
                                    data-routeid="@s.BusRouteId"
                                    data-terminalid="@s.TerminalId"
                                    data-sequence="@s.Sequence"
                                    data-dwellminutes="@s.DwellMinutes">
                                <i class="bi bi-pencil-square"></i>
                            </button>

                            <form method="post" asp-action="Delete" class="d-inline"
                                  onsubmit="return confirm('Delete this route stop?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@s.Id" />
                                <button class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@* ================= MODAL ================= *@
<div class="modal fade" id="routeStopModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <form method="post" asp-action="Save" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()

            <div class="modal-content">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-geo-alt-fill me-1"></i> Route Stop
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="Id" id="stopId" value="@TempData["Form.Id"] ?? 0" />

                    @* Route *@
                    <div class="mb-3">
                        <label class="form-label">Bus Route</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-map"></i></span>
                            <select class="form-select" name="BusRouteId" id="busRouteId" required>
                                <option value="">Select route...</option>
                                @foreach (var r in busRoutes)
                                {
                                    <option value="@r.Id">@r.Name</option>
                                }
                            </select>
                        </div>
                        <div class="invalid-feedback">Route is required.</div>
                    </div>

                    @* Terminal *@
                    <div class="mb-3">
                        <label class="form-label">Terminal</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-building"></i></span>
                            <select class="form-select" name="TerminalId" id="terminalId" required>
                                <option value="">Select terminal...</option>
                                @foreach (var t in terminals)
                                {
                                    <option value="@t.Id">@t.Name</option>
                                }
                            </select>
                        </div>
                        <div class="invalid-feedback">Terminal is required.</div>
                    </div>

                    @* Sequence *@
                    <div class="mb-3">
                        <label class="form-label">Stop Sequence</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-list-ol"></i></span>
                            <input type="number" class="form-control" name="Sequence" id="sequence"
                                   placeholder="e.g. 1" min="1" required />
                        </div>
                        <div class="invalid-feedback">Sequence is required.</div>
                    </div>

                    @* Dwell Minutes *@
                    <div class="mb-3">
                        <label class="form-label">Dwell Time (Minutes)</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-clock"></i></span>
                            <input type="number" class="form-control" name="DwellMinutes" id="dwellMinutes"
                                   placeholder="e.g. 10" min="1" required />
                        </div>
                        <div class="invalid-feedback">Dwell minutes required.</div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i> Close
                    </button>
                    <button type="submit" class="btn btn-dark-blue">
                        <i class="bi bi-save me-1"></i> Save
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {

            $('#stopsTable').DataTable({
                responsive: true,
                dom: 'Bfrtip',
                buttons: [
                    { extend: 'copy', className: 'btn btn-sm btn-outline-primary' },
                    { extend: 'excel', className: 'btn btn-sm btn-outline-success' },
                    { extend: 'csv', className: 'btn btn-sm btn-outline-warning' },
                    { extend: 'pdf', className: 'btn btn-sm btn-outline-danger' },
                    { extend: 'print', className: 'btn btn-sm btn-outline-info' },
                    { extend: 'colvis', className: 'btn btn-sm btn-outline-secondary' }
                ]
            });

            if ('@showModal'.toLowerCase() === 'true')
                new bootstrap.Modal(document.getElementById('routeStopModal')).show();

            $('.edit-stop-btn').on('click', function () {
                const btn = $(this);
                $('#stopId').val(btn.data('id'));
                $('#busRouteId').val(btn.data('routeid'));
                $('#terminalId').val(btn.data('terminalid'));
                $('#sequence').val(btn.data('sequence'));
                $('#dwellMinutes').val(btn.data('dwellminutes'));
            });

            $('.needs-validation').on('submit', function (e) {
                if (!this.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                }
                $(this).addClass('was-validated');
            });
        });

        function clearForm() {
            $('#stopId').val(0);
            $('#busRouteId').val('');
            $('#terminalId').val('');
            $('#sequence').val(1);
            $('#dwellMinutes').val(10);
            $('.needs-validation').removeClass('was-validated');
        }
    </script>
}
