@model List<BusTicketing.Models.Auth.Role>
@{
    Layout = "_Layout";
}

<div class="container-fluid mt-2">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="m-0"><i class="bi bi-shield-lock-fill me-2"></i> Roles</h4>
        <button class="btn btn-dark-blue" data-bs-toggle="modal" data-bs-target="#roleModal" onclick="clearForm()">
            <i class="bi bi-plus-circle me-1"></i> Add Role
        </button>
    </div>

    <div class="table-responsive">
        <table id="rolesTable" class="table table-striped table-bordered display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Role Name</th>
                    <th>Description</th>
                    <th>Agency Name</th>
                    <th style="width:120px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <td>@r.Name</td>
                        <td>@r.Description</td>
                        <td>@r.AgencyName</td>
                        <td>
                            <button class="btn btn-sm btn-warning me-1 edit-role-btn"
                                    data-bs-toggle="modal"
                                    data-bs-target="#roleModal"
                                    data-id="@r.Id"
                                    data-name="@r.Name"
                                    data-description="@r.Description">
                                <i class="bi bi-pencil-square"></i>
                            </button>

                            <form method="post" asp-action="Delete" class="d-inline"
                                  onsubmit="return confirm('Are you sure you want to delete this role?');">
                                <input type="hidden" name="id" value="@r.Id" />
                                <button class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Role Modal -->
<div class="modal fade" id="roleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <form method="post" asp-action="Save" class="needs-validation" novalidate>
            <div class="modal-content">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title"><i class="bi bi-shield-lock-fill me-1"></i> Role Management</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="Id" id="roleId" />

                    <div class="mb-3">
                        <label class="form-label">
                            <i class="bi bi-tag-fill me-1"></i>
                            Name <span class="text-danger">*</span>
                        </label>
                        <input type="text"
                               name="Name"
                               id="roleName"
                               class="form-control"
                               placeholder="Enter role name"
                               required />
                        <div class="invalid-feedback">Role name is required.</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">
                            <i class="bi bi-card-text me-1"></i>
                            Description
                        </label>
                        <textarea name="Description"
                                  id="roleDescription"
                                  class="form-control"
                                  placeholder="Enter role description (optional)"
                                  rows="3"></textarea>
                    </div>


                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle"></i> Close
                    </button>
                    <button type="submit" class="btn btn-dark-blue">
                        <i class="bi bi-save"></i> Save
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        const ts = getTimestamp();

        $(document).ready(function () {
            $('#rolesTable').DataTable({
                responsive: true,
                dom: 'Bfrtip',
                buttons: [
                    { extend: 'copyHtml5', className: 'btn btn-sm btn-outline-primary', title: 'Roles_' + ts },
                    { extend: 'excelHtml5', className: 'btn btn-sm btn-outline-success', title: 'Roles_' + ts },
                    { extend: 'csvHtml5', className: 'btn btn-sm btn-outline-warning', title: 'Roles_' + ts },
                    { extend: 'pdfHtml5', className: 'btn btn-sm btn-outline-danger', title: 'Roles_' + ts },
                    { extend: 'print', className: 'btn btn-sm btn-outline-info', title: 'Roles_' + ts },
                    { extend: 'colvis', className: 'btn btn-sm btn-outline-secondary' }
                ]
            });
        });

        function clearForm() {
            $('#roleId').val(0);
            $('#roleName').val('');
            $('#roleDescription').val('');
        }

        $('#rolesTable').on('click', '.edit-role-btn', function () {
            var btn = $(this);
            $('#roleId').val(btn.data('id'));
            $('#roleName').val(btn.data('name'));
            $('#roleDescription').val(btn.data('description'));
        });

        // Bootstrap validation
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false)
            });
        })();
    </script>
}
