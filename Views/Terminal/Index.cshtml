@model List<BusTicketing.ViewModels.TerminalFormVm>
@{
    Layout = "_Layout";
    string showModal = TempData["ShowTerminalModal"]?.ToString() ?? "false";
    string errHtml = TempData["ErrorDetailsHtml"]?.ToString() ?? "";
}

<div class="container-fluid mt-2">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <div class="fw-bold mb-1"><i class="bi bi-exclamation-triangle-fill me-1"></i> @TempData["ErrorMessage"]</div>
            @Html.Raw(errHtml)
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="m-0"><i class="bi bi-geo-alt me-2"></i> Terminals</h4>
        <button class="btn btn-dark-blue" data-bs-toggle="modal" data-bs-target="#terminalModal" onclick="clearTerminalForm()">
            <i class="bi bi-plus-circle me-1"></i> Add Terminal
        </button>
    </div>

    <div class="table-responsive">
        <table id="terminalsTable" class="table table-striped table-bordered display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Code</th>
                    <th>Latitude</th>
                    <th>Longitude</th>
                    <th style="width:200px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model)
                {
                    <tr>
                        <td>@t.Name</td>
                        <td>@t.Code</td>
                        <td>@(t.Latitude?.ToString("0.000000") ?? "")</td>
                        <td>@(t.Longitude?.ToString("0.000000") ?? "")</td>
                        <td class="text-nowrap">
                            <button class="btn btn-sm btn-warning me-1 edit-terminal-btn"
                                    data-bs-toggle="modal" data-bs-target="#terminalModal"
                                    data-id="@t.Id"
                                    data-name="@t.Name"
                                    data-code="@t.Code"
                                    data-lat="@t.Latitude"
                                    data-lon="@t.Longitude">
                                <i class="bi bi-pencil-square"></i>
                            </button>

                            <form method="post" asp-action="Delete" class="d-inline" onsubmit="return confirm('Delete this terminal?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@t.Id" />
                                <button type="submit" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Terminal Modal -->
<div class="modal fade" id="terminalModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <form method="post" asp-action="Save" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()
            <div class="modal-content">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title"><i class="bi bi-geo-alt me-1"></i> Terminal</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="model.Id" id="terminalId" value="@((TempData["Form.Id"] ?? "0").ToString())" />

                    <div class="mb-3">
                        <label class="form-label"><i class="bi bi-card-text me-1"></i> Name</label>
                        <input type="text" name="model.Name" id="terminalName" class="form-control" maxlength="128" required
                               placeholder="Enter terminal name"
                               value="@TempData["Form.Name"]" />
                        <div class="invalid-feedback">Name is required (max 128 chars).</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label"><i class="bi bi-upc me-1"></i> Code</label>
                        <input type="text" name="model.Code" id="terminalCode" class="form-control" maxlength="16" required
                               placeholder="Enter terminal code"
                               value="@TempData["Form.Code"]" />
                        <div class="invalid-feedback">Code is required (max 16 chars).</div>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label"><i class="bi bi-compass me-1"></i> Latitude</label>
                            <input type="number" name="model.Latitude" id="terminalLat" class="form-control" step="any"
                                   placeholder="e.g., -13.962612"
                                   value="@TempData["Form.Latitude"]" />
                            <div class="form-text">Optional; between -90 and 90.</div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label"><i class="bi bi-compass-fill me-1"></i> Longitude</label>
                            <input type="number" name="model.Longitude" id="terminalLon" class="form-control" step="any"
                                   placeholder="e.g., 33.787529"
                                   value="@TempData["Form.Longitude"]" />
                            <div class="form-text">Optional; between -180 and 180.</div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class="bi bi-x-circle"></i> Close</button>
                    <button type="submit" class="btn btn-dark-blue"><i class="bi bi-save"></i> Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#terminalsTable').DataTable({
                responsive: true,
                dom: 'Bfrtip',
                buttons: [
                    { extend: 'copyHtml5',  text: '<i class="bi bi-clipboard me-1"></i> Copy',  className: 'btn btn-sm btn-outline-primary' },
                    { extend: 'excelHtml5', text: '<i class="bi bi-file-earmark-excel me-1"></i> Excel', className: 'btn btn-sm btn-outline-success' },
                    { extend: 'csvHtml5',   text: '<i class="bi bi-filetype-csv me-1"></i> CSV', className: 'btn btn-sm btn-outline-warning' },
                    { extend: 'pdfHtml5',   text: '<i class="bi bi-file-earmark-pdf me-1"></i> PDF', className: 'btn btn-sm btn-outline-danger' },
                    { extend: 'print',      text: '<i class="bi bi-printer me-1"></i> Print', className: 'btn btn-sm btn-outline-info' },
                    { extend: 'colvis',     text: '<i class="bi bi-eye me-1"></i> Columns', className: 'btn btn-sm btn-outline-secondary' }
                ]
            });

            var showModal = '@showModal'.toLowerCase() === 'true';
            if (showModal) new bootstrap.Modal(document.getElementById('terminalModal')).show();

            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) { event.preventDefault(); event.stopPropagation(); }
                    form.classList.add('was-validated');
                }, false);
            });

            $('#terminalsTable').on('click', '.edit-terminal-btn', function () {
                const btn = $(this);
                $('#terminalId').val(btn.data('id'));
                $('#terminalName').val(btn.data('name') || '');
                $('#terminalCode').val(btn.data('code') || '');
                $('#terminalLat').val(btn.data('lat') ?? '');
                $('#terminalLon').val(btn.data('lon') ?? '');
            });
        });

        function clearTerminalForm() {
            $('#terminalId').val('0');
            $('#terminalName').val('');
            $('#terminalCode').val('');
            $('#terminalLat').val('');
            $('#terminalLon').val('');
            $('.needs-validation').removeClass('was-validated');
        }
    </script>
}
