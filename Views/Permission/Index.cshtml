@model List<BusTicketing.ViewModels.PermissionFormVm>
@{
    Layout = "_Layout";
    string showModal = TempData["ShowPermissionModal"]?.ToString() ?? "false";
    string errHtml = TempData["ErrorDetailsHtml"]?.ToString() ?? "";
}

<div class="container-fluid mt-2">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <div class="fw-bold mb-1"><i class="bi bi-exclamation-triangle-fill me-1"></i> @TempData["ErrorMessage"]</div>
            @Html.Raw(errHtml)
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="m-0"><i class="bi bi-shield-lock me-2"></i> Permissions</h4>
        <button class="btn btn-dark-blue" data-bs-toggle="modal" data-bs-target="#permissionModal" onclick="clearPermissionForm()">
            <i class="bi bi-plus-circle me-1"></i> Add Permission
        </button>
    </div>

    <div class="table-responsive">
        <table id="permissionsTable" class="table table-striped table-bordered display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Description</th>
                    <th style="width:200px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.Code</td>
                        <td>@p.Description</td>
                        <td class="text-nowrap">
                            <button class="btn btn-sm btn-warning me-1 edit-permission-btn"
                                    data-bs-toggle="modal" data-bs-target="#permissionModal"
                                    data-id="@p.Id"
                                    data-code="@p.Code"
                                    data-desc="@p.Description">
                                <i class="bi bi-pencil-square"></i>
                            </button>

                            <form method="post" asp-action="Delete" class="d-inline" onsubmit="return confirm('Delete this permission?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@p.Id" />
                                <button class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="permissionModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <form method="post" asp-action="Save" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()
            <div class="modal-content">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title"><i class="bi bi-shield-lock me-1"></i> Permission</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="model.Id" id="permissionId" value="@((TempData["Form.Id"] ?? "0").ToString())" />

                    <div class="mb-3">
                        <label class="form-label"><i class="bi bi-code-slash me-1"></i> Code</label>
                        <input type="text" name="model.Code" id="permissionCode" class="form-control" maxlength="120" required
                               placeholder="Enter permission code"
                               value="@TempData["Form.Code"]" />
                        <div class="invalid-feedback">Permission code is required.</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label"><i class="bi bi-text-left me-1"></i> Description</label>
                        <textarea name="model.Description" id="permissionDesc" class="form-control" maxlength="400"
                                  placeholder="Enter description">@TempData["Form.Description"]</textarea>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class="bi bi-x-circle"></i> Close</button>
                    <button type="submit" class="btn btn-dark-blue"><i class="bi bi-save"></i> Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#permissionsTable').DataTable({
                responsive: true,
                dom: 'Bfrtip',
                buttons: [
                    {
                        extend: 'copyHtml5',
                        text: '<i class="bi bi-clipboard me-1"></i> Copy',
                        className: 'btn btn-sm btn-outline-primary'
                    },
                    {
                        extend: 'excelHtml5',
                        text: '<i class="bi bi-file-earmark-excel me-1"></i> Excel',
                        className: 'btn btn-sm btn-outline-success'
                    },
                    {
                        extend: 'csvHtml5',
                        text: '<i class="bi bi-filetype-csv me-1"></i> CSV',
                        className: 'btn btn-sm btn-outline-warning'
                    },
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="bi bi-file-earmark-pdf me-1"></i> PDF',
                        className: 'btn btn-sm btn-outline-danger'
                    },
                    {
                        extend: 'print',
                        text: '<i class="bi bi-printer me-1"></i> Print',
                        className: 'btn btn-sm btn-outline-info'
                    },
                    {
                        extend: 'colvis',
                        text: '<i class="bi bi-eye me-1"></i> Columns',
                        className: 'btn btn-sm btn-outline-secondary'
                    }
                ]
            });

            var showModal = '@showModal'.toLowerCase() === 'true';
            if (showModal) new bootstrap.Modal(document.getElementById('permissionModal')).show();

            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) { event.preventDefault(); event.stopPropagation(); }
                    form.classList.add('was-validated');
                }, false);
            });

            $('#permissionsTable').on('click', '.edit-permission-btn', function () {
                const btn = $(this);
                $('#permissionId').val(btn.data('id'));
                $('#permissionCode').val(btn.data('code'));
                $('#permissionDesc').val(btn.data('desc') || '');
            });
        });

        function clearPermissionForm() {
            $('#permissionId').val('0');
            $('#permissionCode').val('');
            $('#permissionDesc').val('');
            $('.needs-validation').removeClass('was-validated');
        }
    </script>
}
