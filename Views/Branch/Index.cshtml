@using BusTicketing.Models.Company
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer V
@model List<BusTicketing.Models.Company.Agency>

@{
    Layout = "_Layout";
    string ts = DateTime.UtcNow.ToString("yyyyMMdd_HHmmss");
}

<div class="container-fluid mt-2">

    <!-- Alerts -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle-fill me-1"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle-fill me-1"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-2">
        <h4 class="mb-0"><i class="bi bi-diagram-3-fill me-1"></i> @V["BranchManagement"]</h4>
        <button class="btn btn-dark-blue" data-bs-toggle="modal" data-bs-target="#branchModal" onclick="clearForm()">
            <i class="bi bi-plus-circle"></i> @V["NewBranch"]
        </button>
    </div>

    <div class="table-responsive">
        <table id="branchesTable" class="table table-striped table-bordered w-100">
            <thead class="table-light">
                <tr>
                    <th>Id</th>
                    <th>@V["BranchName"]</th>
                    <th>@V["Location"]</th>
                    <th>@V["Phone"]</th>
                    <th>@V["Company"]</th>
                    <th>@V["Actions"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model)
                {
                    <tr>
                        <td>@b.Id</td>
                        <td>@b.Name</td>
                        <td>@b.Location</td>
                        <td>@b.Phone</td>
                        <td>@b.Company?.Name</td>
                        <td class="text-nowrap">

                            <button class="btn btn-sm btn-outline-primary edit-branch-btn"
                                    data-bs-toggle="modal" data-bs-target="#branchModal"
                                    data-id="@b.Id"
                                    data-name="@b.Name"
                                    data-location="@b.Location"
                                    data-phone="@b.Phone"
                                    data-company="@b.CompanyId"
                                    >
                                <i class="bi bi-pencil-square"></i>
                            </button>

                            <form method="post" asp-action="Delete" class="d-inline">
                                <input type="hidden" name="id" value="@b.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                        onclick="return confirm('@V["ConfirmDelete"].Value');">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Branch Modal -->
<div class="modal fade" id="branchModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <form method="post" asp-action="Save" class="needs-validation" novalidate>
            <div class="modal-content">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title"><i class="bi bi-diagram-3-fill me-1"></i> @V["BranchManagement"]</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="Id" id="branchId" value="0" />
                    <input type="hidden" name="RowVersion" id="branchRowVersion" />

                    <div class="row g-3">

                        <div class="col-md-6">
                            <label class="form-label"><i class="bi bi-tag-fill me-1"></i> @V["BranchName"]</label>
                            <input type="text" name="Name" id="branchName"
                                   class="form-control" placeholder="@V["EnterBranchName"]"
                                   required maxlength="150" />
                            <div class="invalid-feedback">@V["BranchNameRequired"]</div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label"><i class="bi bi-building me-1"></i> @V["Company"]</label>
                            <select name="CompanyId" id="branchCompany" class="form-select" required>
                                <option value="">@V["SelectCompany"]</option>
                                @foreach (var c in ViewBag.Companies)
                                {
                                    <option value="@c.Id">@c.Name</option>
                                }
                            </select>
                            <div class="invalid-feedback">@V["CompanyRequired"]</div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label"><i class="bi bi-geo-alt-fill me-1"></i> @V["Location"]</label>
                            <input type="text" name="Location" id="branchLocation"
                                   class="form-control" placeholder="@V["EnterLocation"]"
                                   required maxlength="300" />
                            <div class="invalid-feedback">@V["LocationRequired"]</div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label"><i class="bi bi-telephone-fill me-1"></i> @V["Phone"]</label>
                            <input type="text" name="Phone" id="branchPhone"
                                   class="form-control" placeholder="@V["EnterPhone"]"
                                   required maxlength="50" />
                            <div class="invalid-feedback">@V["PhoneRequired"]</div>
                        </div>

                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class="bi bi-x-circle"></i> @V["Close"]</button>
                    <button type="submit" class="btn btn-dark-blue"><i class="bi bi-save"></i> @V["Save"]</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#branchesTable').DataTable({
                responsive: true,
                dom: 'Bfrtip',
                buttons: [
                    { extend: 'copyHtml5', className: 'btn btn-sm btn-outline-primary', title: 'Branches_' + '@ts' },
                    { extend: 'excelHtml5', className: 'btn btn-sm btn-outline-success', title: 'Branches_' + '@ts' },
                    { extend: 'csvHtml5', className: 'btn btn-sm btn-outline-warning', title: 'Branches_' + '@ts' },
                    { extend: 'pdfHtml5', className: 'btn btn-sm btn-outline-danger', title: 'Branches_' + '@ts' },
                    { extend: 'print', className: 'btn btn-sm btn-outline-info', title: 'Branches_' + '@ts' },
                    { extend: 'colvis', className: 'btn btn-sm btn-outline-secondary' }
                ]
            });
        });

        function clearForm() {
            $('#branchId').val(0);
            $('#branchRowVersion').val('');
            $('#branchName').val('');
            $('#branchCompany').val('');
            $('#branchLocation').val('');
            $('#branchPhone').val('');
        }

        $('#branchesTable').on('click', '.edit-branch-btn', function () {
            const b = $(this);
            $('#branchId').val(b.data('id'));
            $('#branchRowVersion').val(b.data('rowversion'));
            $('#branchName').val(b.data('name'));
            $('#branchCompany').val(b.data('company'));
            $('#branchLocation').val(b.data('location'));
            $('#branchPhone').val(b.data('phone'));
        });

        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                });
            });
        })();
    </script>
}
