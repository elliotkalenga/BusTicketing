@model List<BusTicketing.ViewModels.BusRouteVm>

@{
    Layout = "_Layout";
    var showModal = TempData["ShowBusRouteModal"]?.ToString() ?? "false";
    var errHtml = TempData["ErrorDetailsHtml"]?.ToString() ?? "";
}

<div class="container-fluid mt-2">

    @* Alerts *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle me-1"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <div class="fw-bold">
                <i class="bi bi-exclamation-triangle me-1"></i> @TempData["ErrorMessage"]
            </div>
            @Html.Raw(errHtml)
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="m-0">
            <i class="bi bi-signpost-2 me-1"></i> Bus Routes
        </h4>
        <button class="btn btn-dark-blue"
                data-bs-toggle="modal"
                data-bs-target="#busRouteModal"
                onclick="clearForm()">
            <i class="bi bi-plus-circle me-1"></i> Add New Route
        </button>
    </div>

    <div class="table-responsive">
        <table id="routesTable" class="table table-striped table-bordered display nowrap w-100">
            <thead>
                <tr>
                    <th>Route Name</th>
                    <th style="width:140px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model ?? new List<BusTicketing.ViewModels.BusRouteVm>())
                {
                    <tr>
                        <td>
                            <i class="bi bi-signpost-split me-1 text-muted"></i>
                            @r.Name
                        </td>
                        <td class="text-nowrap">
                            <button class="btn btn-sm btn-warning edit-route-btn"
                                    data-bs-toggle="modal"
                                    data-bs-target="#busRouteModal"
                                    data-id="@r.Id"
                                    data-name="@r.Name">
                                <i class="bi bi-pencil-square"></i>
                            </button>

                            <form method="post"
                                  asp-action="Delete"
                                  class="d-inline"
                                  onsubmit="return confirm('Delete this route?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@r.Id" />
                                <button class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@* ================= MODAL ================= *@
<div class="modal fade" id="busRouteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <form method="post" asp-action="Save" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()

            <div class="modal-content">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-signpost-split me-1"></i> Bus Route
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="Id" id="routeId" value="@TempData["Form.Id"] ?? 0" />

                    <div class="mb-3">
                        <label class="form-label">Route Name</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-map"></i>
                            </span>
                            <input type="text"
                                   class="form-control"
                                   name="Name"
                                   id="routeName"
                                   placeholder="e.g. Lilongwe – Blantyre"
                                   required
                                   value="@TempData["Form.Name"] ?? " "  />
                        </div>
                        <div class="invalid-feedback">Route name is required.</div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i> Close
                    </button>
                    <button type="submit" class="btn btn-dark-blue">
                        <i class="bi bi-save me-1"></i> Save Route
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {

            $('#routesTable').DataTable({
                responsive: true,
                dom: 'Bfrtip',
                buttons: [
                    { extend: 'copy', className: 'btn btn-sm btn-outline-primary' },
                    { extend: 'excel', className: 'btn btn-sm btn-outline-success' },
                    { extend: 'csv', className: 'btn btn-sm btn-outline-warning' },
                    { extend: 'pdf', className: 'btn btn-sm btn-outline-danger' },
                    { extend: 'print', className: 'btn btn-sm btn-outline-info' },
                    { extend: 'colvis', className: 'btn btn-sm btn-outline-secondary' }
                ]
            });

            if ('@showModal'.toLowerCase() === 'true')
                new bootstrap.Modal(document.getElementById('busRouteModal')).show();

            $('.needs-validation').on('submit', function (e) {
                if (!this.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                }
                $(this).addClass('was-validated');
            });

            $('#routesTable').on('click', '.edit-route-btn', function () {
                const btn = $(this);
                $('#routeId').val(btn.data('id'));
                $('#routeName').val(btn.data('name'));
            });
        });

        function clearForm() {
            $('#routeId').val(0);
            $('#routeName').val('');
            $('.needs-validation').removeClass('was-validated');
        }
    </script>
}
