@model List<BusTicketing.ViewModels.SeatLayoutFormVm>
@{
    Layout = "_Layout";
    string showModal = TempData["ShowLayoutModal"]?.ToString() ?? "false";
    string errHtml = TempData["ErrorDetailsHtml"]?.ToString() ?? "";
}

<div class="container-fluid mt-2">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <div class="fw-bold mb-1"><i class="bi bi-exclamation-triangle-fill me-1"></i> @TempData["ErrorMessage"]</div>
            @Html.Raw(errHtml)
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="m-0"><i class="bi bi-grid me-2"></i> Seat Layouts</h4>
        <button class="btn btn-dark-blue" data-bs-toggle="modal" data-bs-target="#layoutModal" onclick="clearLayoutForm()">
            <i class="bi bi-plus-circle me-1"></i> Add Layout
        </button>
    </div>

    <div class="table-responsive">
        <table id="layoutsTable" class="table table-striped table-bordered display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Rows</th>
                    <th>Columns</th>
                    <th style="width:200px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var l in Model)
                {
                    <tr>
                        <td>@l.Name</td>
                        <td>@l.Rows</td>
                        <td>@l.Columns</td>
                        <td class="text-nowrap">
                            <button class="btn btn-sm btn-warning me-1 edit-layout-btn"
                                    data-bs-toggle="modal" data-bs-target="#layoutModal"
                                    data-id="@l.Id"
                                    data-name="@l.Name"
                                    data-rows="@l.Rows"
                                    data-cols="@l.Columns">
                                <i class="bi bi-pencil-square"></i>
                            </button>

                            <form method="post" asp-action="Delete" class="d-inline" onsubmit="return confirm('Delete this layout?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@l.Id" />
                                <button class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Layout Modal -->
<div class="modal fade" id="layoutModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <form method="post" asp-action="Save" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()
            <div class="modal-content">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title"><i class="bi bi-grid me-1"></i> Seat Layout</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="model.Id" id="layoutId" value="@((TempData["Form.Id"] ?? "0").ToString())" />

                    <div class="mb-3">
                        <label class="form-label"><i class="bi bi-card-text me-1"></i> Name</label>
                        <input type="text" name="model.Name" id="layoutName" class="form-control" maxlength="200" required
                               placeholder="Enter layout name (e.g., 2x2 Standard)"
                               value="@TempData["Form.Name"]" />
                        <div class="invalid-feedback">Layout name is required.</div>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label"><i class="bi bi-list-ol me-1"></i> Rows</label>
                            <input type="number" name="model.Rows" id="layoutRows" class="form-control" min="1" step="1" required
                                   placeholder="Rows (e.g., 10)"
                                   value="@((TempData["Form.Rows"] ?? "1").ToString())" />
                            <div class="invalid-feedback">Rows must be 1 or more.</div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label"><i class="bi bi-grid-3x3-gap-fill me-1"></i> Columns</label>
                            <input type="number" name="model.Columns" id="layoutCols" class="form-control" min="1" step="1" required
                                   placeholder="Columns (e.g., 4)"
                                   value="@((TempData["Form.Columns"] ?? "1").ToString())" />
                            <div class="invalid-feedback">Columns must be 1 or more.</div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class="bi bi-x-circle"></i> Close</button>
                    <button type="submit" class="btn btn-dark-blue"><i class="bi bi-save"></i> Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#layoutsTable').DataTable({
                responsive: true,
                dom: 'Bfrtip',
                buttons: [
                    {
                        extend: 'copyHtml5',
                        text: '<i class="bi bi-clipboard me-1"></i> Copy',
                        className: 'btn btn-sm btn-outline-primary'
                    },
                    {
                        extend: 'excelHtml5',
                        text: '<i class="bi bi-file-earmark-excel me-1"></i> Excel',
                        className: 'btn btn-sm btn-outline-success'
                    },
                    {
                        extend: 'csvHtml5',
                        text: '<i class="bi bi-filetype-csv me-1"></i> CSV',
                        className: 'btn btn-sm btn-outline-warning'
                    },
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="bi bi-file-earmark-pdf me-1"></i> PDF',
                        className: 'btn btn-sm btn-outline-danger'
                    },
                    {
                        extend: 'print',
                        text: '<i class="bi bi-printer me-1"></i> Print',
                        className: 'btn btn-sm btn-outline-info'
                    },
                    {
                        extend: 'colvis',
                        text: '<i class="bi bi-eye me-1"></i> Columns',
                        className: 'btn btn-sm btn-outline-secondary'
                    }
                ]
            });

            var showModal = '@showModal'.toLowerCase() === 'true';
            if (showModal) new bootstrap.Modal(document.getElementById('layoutModal')).show();

            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) { event.preventDefault(); event.stopPropagation(); }
                    form.classList.add('was-validated');
                }, false);
            });

            // Edit handler
            $('#layoutsTable').on('click', '.edit-layout-btn', function () {
                const btn = $(this);
                $('#layoutId').val(btn.data('id'));
                $('#layoutName').val(btn.data('name') || '');
                $('#layoutRows').val(btn.data('rows') ?? 1);
                $('#layoutCols').val(btn.data('cols') ?? 1);
            });
        });

        function clearLayoutForm() {
            $('#layoutId').val('0');
            $('#layoutName').val('');
            $('#layoutRows').val(1);
            $('#layoutCols').val(1);
            $('.needs-validation').removeClass('was-validated');
        }
    </script>
}
