@model List<BusTicketing.ViewModels.BusAmenityFormVm>
@{
    Layout = "_Layout";
    string showModal = TempData["ShowAmenityModal"]?.ToString() ?? "false";
    string errHtml = TempData["ErrorDetailsHtml"]?.ToString() ?? "";
}

<div class="container-fluid mt-2">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <div class="fw-bold mb-1"><i class="bi bi-exclamation-triangle-fill me-1"></i> @TempData["ErrorMessage"]</div>
            @Html.Raw(errHtml)
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="m-0"><i class="bi bi-list-task me-2"></i> Bus Amenities</h4>
        <button class="btn btn-dark-blue" data-bs-toggle="modal" data-bs-target="#amenityModal" onclick="clearAmenityForm()">
            <i class="bi bi-plus-circle me-1"></i> Add Amenity
        </button>
    </div>

    <div class="table-responsive">
        <table id="amenitiesTable" class="table table-striped table-bordered display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th style="width:200px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model)
                {
                    <tr>
                        <td>@a.Name</td>
                        <td class="text-nowrap">
                            <button class="btn btn-sm btn-warning me-1 edit-amenity-btn"
                                    data-bs-toggle="modal" data-bs-target="#amenityModal"
                                    data-id="@a.Id"
                                    data-name="@a.Name">
                                <i class="bi bi-pencil-square"></i>
                            </button>

                            <form method="post" asp-action="Delete" class="d-inline"
                                  onsubmit="return confirm('Delete this amenity?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@a.Id" />
                                <button class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Amenity Modal -->
<div class="modal fade" id="amenityModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <form method="post" asp-action="Save" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()
            <div class="modal-content">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title"><i class="bi bi-list-task me-1"></i> Amenity</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="model.Id" id="amenityId" value="@((TempData["Form.Id"] ?? "0").ToString())" />

                    <div class="mb-3">
                        <label class="form-label"><i class="bi bi-card-text me-1"></i> Name</label>
                        <input type="text" name="model.Name" id="amenityName" class="form-control" maxlength="64" required
                               placeholder="e.g., Wi‑Fi, Air Conditioning"
                               value="@TempData["Form.Name"]" />
                        <div class="invalid-feedback">Amenity name is required (max 64 chars).</div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class="bi bi-x-circle"></i> Close</button>
                    <button type="submit" class="btn btn-dark-blue"><i class="bi bi-save"></i> Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#amenitiesTable').DataTable({
                responsive: true,
                dom: 'Bfrtip',
                buttons: [
                    {
                        extend: 'copyHtml5',
                        text: '<i class="bi bi-clipboard me-1"></i> Copy',
                        className: 'btn btn-sm btn-outline-primary'
                    },
                    {
                        extend: 'excelHtml5',
                        text: '<i class="bi bi-file-earmark-excel me-1"></i> Excel',
                        className: 'btn btn-sm btn-outline-success'
                    },
                    {
                        extend: 'csvHtml5',
                        text: '<i class="bi bi-filetype-csv me-1"></i> CSV',
                        className: 'btn btn-sm btn-outline-warning'
                    },
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="bi bi-file-earmark-pdf me-1"></i> PDF',
                        className: 'btn btn-sm btn-outline-danger'
                    },
                    {
                        extend: 'print',
                        text: '<i class="bi bi-printer me-1"></i> Print',
                        className: 'btn btn-sm btn-outline-info'
                    },
                    {
                        extend: 'colvis',
                        text: '<i class="bi bi-eye me-1"></i> Columns',
                        className: 'btn btn-sm btn-outline-secondary'
                    }
                ]
            });

            var showModal = '@showModal'.toLowerCase() === 'true';
            if (showModal) new bootstrap.Modal(document.getElementById('amenityModal')).show();

            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) { event.preventDefault(); event.stopPropagation(); }
                    form.classList.add('was-validated');
                }, false);
            });

            $('#amenitiesTable').on('click', '.edit-amenity-btn', function () {
                const btn = $(this);
                $('#amenityId').val(btn.data('id'));
                $('#amenityName').val(btn.data('name') || '');
            });
        });

        function clearAmenityForm() {
            $('#amenityId').val('0');
            $('#amenityName').val('');
            $('.needs-validation').removeClass('was-validated');
        }
    </script>
}
