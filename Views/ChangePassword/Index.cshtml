@model List<BusTicketing.Models.Auth.User>
@{
    Layout = "_Layout";
}

<div class="container-fluid mt-2">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="m-0"><i class="bi bi-key-fill me-2"></i> Reset User Passwords</h4>
    </div>

    <div class="table-responsive">
        <table id="usersTable" class="table table-striped table-bordered display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th style="width:180px;">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr>
                        <td>@u.Username</td>
                        <td>@u.FullName</td>
                        <td>@u.Email</td>
                        <td>@u.Phone</td>
                        <td>
                            <form method="post" asp-action="ResetPassword" class="d-inline">
                                <input type="hidden" name="id" value="@u.Id" />
                                <button type="submit" class="btn btn-sm btn-warning">
                                    <i class="bi bi-arrow-counterclockwise me-1"></i> Reset Password
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        const ts = getTimestamp();

        $(document).ready(function () {
            $('#usersTable').DataTable({
                responsive: true,
                dom: 'Bfrtip',
                buttons: [
                    { extend: 'copyHtml5', className: 'btn btn-sm btn-outline-primary', title: 'Users_' + ts },
                    { extend: 'excelHtml5', className: 'btn btn-sm btn-outline-success', title: 'Users_' + ts },
                    { extend: 'csvHtml5', className: 'btn btn-sm btn-outline-warning', title: 'Users_' + ts },
                    { extend: 'pdfHtml5', className: 'btn btn-sm btn-outline-danger', title: 'Users_' + ts },
                    { extend: 'print', className: 'btn btn-sm btn-outline-info', title: 'Users_' + ts },
                    { extend: 'colvis', className: 'btn btn-sm btn-outline-secondary' }
                ]
            });
        });
    </script>
}
