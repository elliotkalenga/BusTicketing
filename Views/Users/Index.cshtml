@model List<BusTicketing.Models.Auth.User>
@{
    Layout = "_Layout";
}

<div class="container-fluid mt-2">
    <!-- Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="m-0"><i class="bi bi-people-fill me-2"></i> Users</h4>
        <button class="btn btn-dark-blue" data-bs-toggle="modal" data-bs-target="#userModal" onclick="clearForm()">
            <i class="bi bi-plus-circle me-1"></i> Add User
        </button>
    </div>

    <div class="table-responsive">
        <table id="usersTable" class="table table-striped table-bordered display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Agency</th>
                    <th>Area</th>
                    <th>Town</th>
                    <th>Province</th>
                    <th>Active</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr>
                        <td>@u.Username</td>
                        <td>@u.FullName</td>
                        <td>@u.Email</td>
                        <td>@u.Phone</td>
                        <td>@u.AgencyName</td>
                        <td>@u.AreaName</td>
                        <td>@u.TownName</td>
                        <td>@u.ProvinceName</td>
                        <td>@(u.IsActive ? "Yes" : "No")</td>
                        <td>
                            <button class="btn btn-sm btn-warning me-1 edit-user-btn" data-bs-toggle="modal" data-bs-target="#userModal"
                                    data-id="@u.Id"
                                    data-username="@u.Username"
                                    data-fullname="@u.FullName"
                                    data-email="@u.Email"
                                    data-phone="@u.Phone"
                                    data-areaid="@u.AreaId"
                                    data-isactive="@u.IsActive.ToString().ToLower()">
                                <i class="bi bi-pencil-square"></i>
                            </button>
                            <form method="post" asp-action="Delete" class="d-inline"
                                  onsubmit="return confirm('Are you sure you want to delete this user?');">
                                <input type="hidden" name="id" value="@u.Id" />
                                <button class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- User Modal -->
<!-- User Modal -->
<div class="modal fade" id="userModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <form method="post" asp-action="Save" class="needs-validation" novalidate>
            <div class="modal-content">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title"><i class="bi bi-person-fill me-1"></i> User Management</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="Id" id="userId" />

                    <div class="mb-3">
                        <label><i class="bi bi-person-circle me-1"></i> Username</label>
                        <input type="text" name="Username" id="username" class="form-control" placeholder="Enter username" required />
                        <div class="invalid-feedback">Username is required.</div>
                    </div>

                    <div class="mb-3">
                        <label><i class="bi bi-person-badge me-1"></i> Full Name</label>
                        <input type="text" name="FullName" id="fullName" class="form-control" placeholder="Enter full name" />
                    </div>

                    <div class="mb-3">
                        <label><i class="bi bi-envelope-fill me-1"></i> Email</label>
                        <input type="email" name="Email" id="email" class="form-control" placeholder="Enter email address" />
                        <div class="invalid-feedback">Please enter a valid email.</div>
                    </div>

                    <div class="mb-3">
                        <label><i class="bi bi-telephone-fill me-1"></i> Phone</label>
                        <input type="text" name="Phone" id="phone" class="form-control" placeholder="Enter phone number" />
                    </div>
                    <div class="mb-3">
                        <label>
                            <i class="bi bi-geo-alt-fill me-1"></i> Area
                        </label>
                        <select name="AreaId" id="areaId" class="form-select" required>
                            <option value="">-- Select Area --</option>
                            @foreach (var a in (List<SelectListItem>)ViewBag.Areas)
                            {
                                <option value="@a.Value">@a.Text</option>
                            }
                        </select>
                        <div class="invalid-feedback">Area is required.</div>
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" name="IsActive" id="isActive" class="form-check-input" checked />
                        <label class="form-check-label">Active</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal"><i class="bi bi-x-circle"></i> Close</button>
                    <button class="btn btn-dark-blue"><i class="bi bi-save"></i> Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        const timestamp = getTimestamp();

        $(document).ready(function () {
            $('#usersTable').DataTable({
                responsive: true,
                dom: 'Bfrtip',
                buttons: [
                    { extend: 'copyHtml5', className: 'btn btn-sm btn-outline-primary', title: 'Users_' + timestamp },
                    { extend: 'excelHtml5', className: 'btn btn-sm btn-outline-success', title: 'Users_' + timestamp },
                    { extend: 'csvHtml5', className: 'btn btn-sm btn-outline-warning', title: 'Users_' + timestamp },
                    { extend: 'pdfHtml5', className: 'btn btn-sm btn-outline-danger', title: 'Users_' + timestamp },
                    { extend: 'print', className: 'btn btn-sm btn-outline-info', title: 'Users_' + timestamp },
                    { extend: 'colvis', className: 'btn btn-sm btn-outline-secondary' }
                ]
            });
        });

        function clearForm() {
            $('#userId').val(0);
            $('#username').val('');
            $('#fullName').val('');
            $('#email').val('');
            $('#phone').val('');
            $('#areaId').val('');
            $('#isActive').prop('checked', true);
        }

        $('#usersTable').on('click', '.edit-user-btn', function () {
            var btn = $(this);
            $('#userId').val(btn.data('id'));
            $('#username').val(btn.data('username'));
            $('#fullName').val(btn.data('fullname'));
            $('#email').val(btn.data('email'));
            $('#phone').val(btn.data('phone'));
            $('#areaId').val(btn.data('areaid'));
            $('#isActive').prop('checked', btn.data('isactive'));
        });

        // Bootstrap validation
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false)
            });
        })();


    </script>
}
